<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
    </Console>
  </Appenders>
  <Loggers>
    <!-- Set root logger to WARN to suppress INFO/DEBUG during tests -->
    <Root level="warn">
      <AppenderRef ref="Console"/>
    </Root>

    <!-- Optionally raise level for known noisy components -->
    <Logger name="com.otabi.jcodroneedu.serial" level="warn" additivity="false">
      <AppenderRef ref="Console"/>
    </Logger>
  </Loggers>
</Configuration>
