<?xml version="1.0" encoding="UTF-8"?>
<!--
    Runtime Logging Configuration
    ==============================
    
    You can override logger levels at runtime using system properties:
    
    1. Receiver (packet-level telemetry):
        java -Djcodrone.logging.receiver=DEBUG -jar build/libs/JCoDroneEdu-1.0-SNAPSHOT.jar
        Default: INFO (suppresses noisy packet logs)
    
    2. FlightController (sensor polling, flight state):
        java -Djcodrone.logging.flightcontroller=TRACE -jar build/libs/JCoDroneEdu-1.0-SNAPSHOT.jar
        Default: INFO (suppresses sensor polling, shows battery thresholds and errors)
        TRACE: All sensor polls (very verbose, development only)
        DEBUG: Unused (no DEBUG logs after Phase 2)
    
    3. SerialPortManager (serial communication):
        java -Djcodrone.logging.serialport=DEBUG -jar build/libs/JCoDroneEdu-1.0-SNAPSHOT.jar
        Default: DEBUG (shows connection/error details)
    
    4. Combined example:
        java -Djcodrone.logging.flightcontroller=TRACE -Djcodrone.logging.receiver=DEBUG -jar ...
    
    5. Gradle example:
        ./gradlew runTestHarness -Dorg.gradle.jvmargs="-Djcodrone.logging.flightcontroller=TRACE"
-->
<Configuration status="WARN">
        <Properties>
                <!-- FlightController: sensor polling, battery warnings (default: INFO suppresses polling) -->
                <Property name="jcodrone.logging.flightcontroller">INFO</Property>
                <!-- SerialPortManager: serial communication details -->
                <Property name="jcodrone.logging.serialport">DEBUG</Property>
                <!-- Receiver: packet-level telemetry (default: INFO suppresses noisy logs) -->
                <Property name="jcodrone.logging.receiver">INFO</Property>
        </Properties>
    <Appenders>
        <!-- Console Appender for development -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>
        
        <!-- Rolling File Appender for production -->
        <RollingFile name="RollingFileAppender" fileName="logs/codrone-edu.log" 
                     filePattern="logs/codrone-edu-%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy />
                <SizeBasedTriggeringPolicy size="10MB"/>
            </Policies>
            <DefaultRolloverStrategy max="5"/>
        </RollingFile>
        
        <!-- Student-friendly console output for educational messages -->
        <Console name="StudentConsole" target="SYSTEM_OUT">
            <PatternLayout pattern="[CoDrone EDU] %msg%n"/>
        </Console>
    </Appenders>
    
    <Loggers>
        <!-- Root logger - catches all unspecified loggers -->
        <Root level="INFO">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="RollingFileAppender"/>
        </Root>
        
        <!-- Specific loggers for different components -->
        
        <!-- Main Drone class - balance of info for students and debug for developers -->
        <Logger name="com.otabi.jcodroneedu.Drone" level="INFO" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="RollingFileAppender"/>
        </Logger>
        
        <!-- Flight controller - info level (suppresses sensor polling at DEBUG/TRACE) -->
        <!-- Set -Djcodrone.logging.flightcontroller=TRACE to see all sensor polls during development -->
        <Logger name="com.otabi.jcodroneedu.FlightController" level="${jcodrone.logging.flightcontroller}" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="RollingFileAppender"/>
        </Logger>
        
        <!-- Serial port manager - debug level for connection diagnostics -->
        <!-- Set -Djcodrone.logging.serialport=TRACE for byte-level protocol details -->
        <Logger name="com.otabi.jcodroneedu.SerialPortManager" level="${jcodrone.logging.serialport}" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="RollingFileAppender"/>
        </Logger>
        
        <!-- Receiver - can be noisy. Uses a runtime-settable property to control level -->
        <Logger name="com.otabi.jcodroneedu.receiver" level="${jcodrone.logging.receiver}" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="RollingFileAppender"/>
        </Logger>
        
        <!-- Educational examples - these should remain using System.out -->
        <Logger name="com.otabi.jcodroneedu.example" level="OFF" additivity="false">
            <!-- No appenders - these classes will use System.out directly -->
        </Logger>
        
        <!-- Other components (Drone, TelemetryService, ElevationService, etc.) -->
        <Logger name="com.otabi.jcodroneedu" level="INFO" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="RollingFileAppender"/>
        </Logger>
    </Loggers>
</Configuration>
